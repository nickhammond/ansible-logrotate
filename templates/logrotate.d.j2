# {{ ansible_managed }}
{% if item.globaloptions is defined -%}
{% for globaloption in item.globaloptions -%}
{{ globaloption }}
{% endfor -%}
{% endif %}

{% if 'path' in item %}
"{{ item.path }}"
{% elif 'paths' in item %}
{% for path in item.paths %}
"{{ path }}"
{% endfor %}
{% endif %}
{
  {% if item.options is defined -%}
  {% for option in item.options -%}
  {{ option }}
  {% endfor -%}
  {% endif %}
  {%- if item.scripts is defined -%}
  {%- for name, script in item.scripts.items() -%}
  {{ name }}
    {{ script }}
  endscript
  {% endfor -%}
  {% endif -%}
}
